@model IEnumerable<BigFatDiary.Models.View.AdministratorUser>

@{
    ViewBag.Title = "ListUsers";
}
<style>
    th, td {
        border-collapse: collapse;
        border-right: solid;
        border-top: solid;
        border-bottom: solid;
        border-color: dimgray;
        padding: 5px;
        color: black;
    }

        th:first-child {
            padding: 0px;
        }

        td:first-child {
            padding: 0px;
        }

    table > tr {
    }

    thead > tr:first-child:hover {
    }

    tbody > tr:hover {
        background-color: lightgray;
        cursor: pointer;
    }

    hr {
        height: 2px;
        margin-bottom: 2px;
        background-color: dimgray;
    }

    h3 {
        padding-left: 25px;
    }

    a:hover {
        text-decoration-line: none;
    }
</style>
<h1>ListUsers</h1>
<h3 style="padding-left:25px;"></h3>
<table style="width:1140px;border-top:solid;border-color:dimgray;max-height:600px;overflow-x:hidden;overflow-y:scroll">
    <tr>
        <th>Id</th>
        <th>Username</th>
        <th>Email</th>
        <th>Role</th>
    </tr>
    @{
        if (Model.Any())
        {
            foreach (var u in Model)
            {
                <tr onclick="editUser(this)">
                    <td>@u.Id</td>
                    <td>@u.Username</td>
                    <td>@u.Email</td>
                    <td>@u.Role</td>
                </tr>
            }
        }
        else
        {
        }
    }
</table>

@section scripts{
    <script>
        function editUser(item) {
            location.href = "/Administrator/EditUser/" + item.firstElementChild.innerText;
        }
    </script>
}