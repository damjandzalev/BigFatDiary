@model BigFatDiary.Models.Data.FoodStuff

@{
    ViewBag.Title = "Details";
}
<style>


    hr {
        height: 2px;
        margin-bottom: 2px;
        background-color: dimgray;
    }

    h3 {
        padding-left: 25px;
    }
</style>
<h1>@Model.Name details</h1>
<h3 style="padding-left: 25px;">Content details - foodstuff</h3>
<hr />

<div style="width:1140px;display:inline-block">
    <div style="width:1140px;height:33.6px">
        <a href="/FoodStuffs" style="float:left;padding-right:5px">
            <div class="btn btn-default">
                Back to list
            </div>
        </a>
        <form method="post" action="/User/Eat/@Model.Name" style="float:right">
            @Html.AntiForgeryToken()
            <div>
                <input id="type" name="type" type="hidden" value="FoodStuff" />
                <input id="amount" name="amount" type="text" class="form-control" style="max-width: 320px; width: 320px; height: 33.6px; float: left" placeholder="Number of portions(decimal values accepted)" />
                <input id="eatSubmit" type="submit" class="btn btn-default" style="height:33.6px;float:left" value="Eat" />
            </div>
        </form>
    </div>
    <div style="width:1140px;border-top:solid;border-color:dimgray;padding-top:25px;">
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Name)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Name)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.AddedBy)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.AddedBy)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Calories)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Calories)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Proteins)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Proteins)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Carbohydrates)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Carbohydrates)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Fats)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Fats)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.MeasurementUnit)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.MeasurementUnit)
            </dd>

            <dt>

            </dt>
            <dd style="margin-top:10px">
                <a href="/FoodStuffs/Edit/@Model.Name">
                    <div class="btn btn-default" style="font-size:larger">
                        Edit
                    </div>
                </a>
            </dd>
        </dl>
    </div>
</div>

