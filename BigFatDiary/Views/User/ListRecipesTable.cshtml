@model IEnumerable<BigFatDiary.Models.View.DetailsRecipe>

<table id="recipes" class="table">
    <thead>
        <tr>
            <th hidden="hidden">id</th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreatedBy)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Calories)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Portions)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Grade)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr onclick="recipeDetails(this)">
                <td hidden="hidden">@item.Id</td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreatedBy)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Calories)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Portions)
                </td>
                <td>
                    @if (item.Grade > 0)
                    {
                        <div style="width:@(24 * item.Grade)px;overflow:hidden;padding:0px;max-height:24px">
                            <div style="display:block;width:120px;">
                                <div style="width: 24px;height:24px;float:left;"><img style="width: 24px;height:24px;" src="~/Images/AcbK4z6qi.png" /></div>
                                <div style="width: 24px;height:24px;float:left;"><img style="width: 24px;height:24px;" src="~/Images/AcbK4z6qi.png" /></div>
                                <div style="width: 24px;height:24px;float:left;"><img style="width: 24px;height:24px;" src="~/Images/AcbK4z6qi.png" /></div>
                                <div style="width: 24px;height:24px;float:left;"><img style="width: 24px;height:24px;" src="~/Images/AcbK4z6qi.png" /></div>
                                <div style="width: 24px;height:24px;float:left;"><img style="width: 24px;height:24px;" src="~/Images/AcbK4z6qi.png" /></div>
                            </div>
                        </div>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

